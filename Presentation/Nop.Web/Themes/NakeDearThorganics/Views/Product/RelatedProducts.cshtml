@model IList<ProductOverviewModel>

@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <h1 class="style-1 mt0">@T("Products.RelatedProducts")</h1>
    <div class="related">
        <div class="box-product">
            <ul class="related-slider">

                @foreach (var item in Model)
                {
                    <li class="related-info">@Html.Partial("_ProductRelatedBox", item)</li>
                }
            </ul>
        </div>
    </div>
}