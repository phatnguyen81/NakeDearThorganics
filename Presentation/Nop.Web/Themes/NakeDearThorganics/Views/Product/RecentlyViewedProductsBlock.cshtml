@model IList<ProductOverviewModel>
@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <div class="box new-products">
        <div class="box-heading">@T("Products.RecentlyViewedProducts")</div>
        <div class="box-content">
            <div class="box-product">
                <ul class="row">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var product = Model[i];
                        <li @(i == Model.Count - 1 ? @Html.Raw(" class=\"last\"") : null)>
                          
                            @if (!String.IsNullOrEmpty(product.DefaultPictureModel.ImageUrl))
                            {
                                <div class="image2">
                                    <a class="product-picture" href="@Url.RouteUrl("Product", new { SeName = product.SeName })" title="@product.DefaultPictureModel.Title">
                                        <img alt="@product.DefaultPictureModel.AlternateText" src="@product.DefaultPictureModel.ImageUrl" title="@product.DefaultPictureModel.Title" />
                                    </a>
                                </div>
                            }
                            <div class="inner">
                                <div class="f-left">
                                    <div class="name maxheight" style="height: 21px;">
                                        <a href="@Url.RouteUrl("Product", new { SeName = product.SeName })">@product.Name</a>
                                    </div>

                                    <div class="description">@Html.Raw(product.ShortDescription)</div>

                                    
                                </div>
                                <div class="clear"></div>
                                <div class="rating">
                                </div>
                            </div>
                            <div class="clear"></div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
}